{
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://primate-perfect-haddock.ngrok-free.app/api/:path*" },
    { "source": "/auth/:path*", "destination": "https://primate-perfect-haddock.ngrok-free.app/auth/:path*" },
    { "source": "/shopify/:path*", "destination": "https://primate-perfect-haddock.ngrok-free.app/shopify/:path*" },
    { "source": "/chat-widget.js", "destination": "https://primate-perfect-haddock.ngrok-free.app/chat-widget.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}